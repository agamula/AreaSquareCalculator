<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/grid_view_item_height"
              android:background="@color/grid_item_bkg_color"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <!--<EditText-->
    <!--android:id="@+id/csv_path"-->
    <!--style="@style/EditTextDefaultStyle"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_margin="2dp"-->
    <!--android:background="@drawable/grid_edit_drawable"-->
    <!--android:singleLine="true"-->
    <!--android:imeOptions="actionDone"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:paddingRight="5dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="text"
                android:id="@+id/csv_path"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:imeOptions="actionDone"
                android:singleLine="true"/>

        </HorizontalScrollView>

        <Button
            android:id="@+id/csv"
            style="@style/ButtonDefaultStyle"
            android:layout_width="80dp"
            android:layout_height="@dimen/button_height_extra_small"
            android:layout_margin="1dp"
            android:background="@drawable/button_drawable"
            android:padding="0dp"
            android:layout_weight="1"
            android:text="@string/csv"
            android:textSize="@dimen/button_text_size_small"/>

    </LinearLayout>

    <TextView
        android:id="@+id/square_value"
        style="@style/TextViewDefaultStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text=""/>

</LinearLayout>