<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/grid_view_item_height"
              android:background="@color/grid_item_bkg_color"
              android:gravity="center_vertical"
              android:orientation="vertical">

    <EditText
        android:id="@+id/csv_path"
        style="@style/EditTextDefaultStyle"
        android:layout_width="match_parent"
        android:layout_margin="2dp"
        android:background="@drawable/grid_edit_drawable"
        android:singleLine="true"
        android:imeOptions="actionDone"/>

    <Button
        android:id="@+id/csv"
        style="@style/ButtonDefaultStyle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height_extra_small"
        android:layout_margin="1dp"
        android:background="@drawable/button_drawable"
        android:padding="0dp"
        android:text="@string/csv"
        android:textSize="@dimen/button_text_size_small"/>

    <TextView
        android:id="@+id/square_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TextViewDefaultStyle"
        android:gravity="center"
        android:layout_margin="1dp"
        android:text=""/>
</LinearLayout>